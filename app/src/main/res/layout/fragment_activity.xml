<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.activity.ActivityFragment">


    <TextView
        android:id="@+id/tvMy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Activity"
        android:textColor="@color/black"
        android:fontFamily="@font/robotobold"
        android:textStyle="bold"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/tv_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="History"
        android:textSize="16sp"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:fontFamily="@font/sanomat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/ic_btac"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvMy"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:elevation="0dp"
        android:id="@+id/btAc"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/ic_btdenot"
        app:layout_constraintStart_toEndOf="@id/btAc"
        app:layout_constraintTop_toBottomOf="@id/tvMy"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:elevation="0dp"
        android:id="@+id/btDe"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@id/btAc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>