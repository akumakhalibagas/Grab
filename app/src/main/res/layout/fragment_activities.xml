<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.activity.ActivitiesFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:cardBackgroundColor="@color/gray_card"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sanomat"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="Nothing's happening now"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="When you use our services, you'll see them here"
                android:textColor="@color/gray"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/sanomat"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>